{
    "name": "vontrine",
    "version": "0.0.1",
    "description": "The fast, secure, chroium based web browser ðŸ–¥",
    "main": "./App.js",
    "dependencies": {
        "react": "^18.3.1",
        "sass": "^3.0.0",
        "typescript": "^5.6.2"
    },
    "devDependencies": {
        "electron": "^32.1.2",
        "electron-builder": "^25.0.5"
    },
    "build": {
        "appId": "dev.github.stumbdev.vontrine",
        "win": {
         "target": [
          {
           "target": "msi",
           "arch": [
             "x64",
             "ia32"
          ]
        }
       ]
     },
    "mac": {
       "target": [
         {
            "target": "pkg",
            "arch": [
            "universal"
          ]
        }
       ]
      },
      "linux": {
        "target": [
            {
                "target": "flatpak",
                "arch": "x64"
            },
            {
                "target": "deb",
                "arch": "x64"
            },
            {
                "target": "snap",
                "arch": "x64"
            }
        ]
      }
    }
}